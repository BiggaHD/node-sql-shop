<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            <% if (orders.length > 0) { %>
                <ul class="cart__item-list" style="list-style: none;">
                    <% orders.forEach(o => { %>
                        <% o.Products.forEach(p => { %>
                        <li class="cart__item">
                            <span style="float: left;"><%= o.id %>:</span><span style="font-weight: bold;">
                                <%= p.title %>
                            </span> 
                        </li>
                     <hr>
                        <% }) %>
                        <% }) %>
                    </ul>
                    <br>
                    <div class="centered">
                        <form action="/checkout" method="post">
                            <button class="btn">Checkout</button>
                        </form>
                    </div>
            <% } else { %>
                <h1>No Orders made, yet.</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>